<?xml version="1.0" encoding="ISO-8859-1"?>
<?xml-stylesheet type="text/xsl" href="yarpmanifest.xsl"?>
<application>

    <!-- Generic information-->
    <name>Background_Apps</name>
    <description>Background applications for general experiments</description>
    <version>1.0.0</version>

    <authors>
        <author email="claudio.fantacci@iit.it">Claudio Fantacci</author>
    </authors>

    <!-- Required modules. -->
    <module>
        <name>yarplogger</name>
        <dependencies>
            <port timeout="10.0">/claudioyarprun</port>
        </dependencies>
    </module>

    <module>
        <name>iKinCartesianSolver</name>
        <parameters>--part right_arm</parameters>
        <node>claudioyarprun</node>
        <dependencies>
            <port timeout="10.0">/claudioyarprun</port>
            <port timeout="10.0">/icub/right_arm/state:o</port>
        </dependencies>
    </module>

    <module>
        <name>iKinGazeCtrl</name>
        <parameters>--from config.ini</parameters>
        <node>claudioyarprun</node>
        <dependencies>
            <port timeout="10.0">/claudioyarprun</port>
        </dependencies>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /viewleft</parameters>
        <node>claudioyarprun</node>
        <dependencies>
            <port timeout="10.0">/claudioyarprun</port>
        </dependencies>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /viewright</parameters>
        <node>claudioyarprun</node>
        <dependencies>
            <port timeout="10.0">/claudioyarprun</port>
        </dependencies>
    </module>

    <!-- Required connections -->
    <connection>
        <from>/icub/cam/left</from>
        <to>/viewleft</to>
    </connection>

    <connection>
        <from>/icub/cam/right</from>
        <to>/viewright</to>
    </connection>
</application>

<?xml version="1.0" encoding="ISO-8859-1"?>
<?xml-stylesheet type="text/xsl" href="yarpmanifest.xsl"?>
<application>

    <!-- Generic information -->
    <name>movefinger</name>
    <description>Move the iCub_SIM index finger in a circular path</description>
    <version>1.0.0</version>

    <authors>
        <author email="claudio.fantacci@iit.it">Claudio Fantacci</author>
    </authors>

    <!-- Required modules -->
    <module>
        <name>movefinger</name>
        <node>yarprun</node>
        <dependencies>
            <port>/cmdtomf</port>
        </dependencies>
    </module>

    <module>
        <name>yarpdatadumper</name>
        <node>yarprun</node>
        <parameters>--name /dumpmf</parameters>
        <dependencies>
            <port>/movefinger/tippose:o</port>
        </dependencies>
    </module>

    <!-- Required connections -->
    <connection>
        <from>/cmdtomf</from>
        <to>/movefinger/command</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/movefinger/tippose:o</from>
        <to>/dumpmf</to>
        <protocol>tcp</protocol>
    </connection>

</application>
